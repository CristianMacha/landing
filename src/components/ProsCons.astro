---
// ProsCons.astro
import Check from '../assets/check.svg?raw';
---
<section class="pros-cons-section">
    <div class="container">
        <h2>Granite vs. Quartz</h2>
        <div class="pros-cons-container">
            <div class="column glass-card">
                <h3>Granite</h3>
                <ul>
                    <li><Fragment set:html={Check} /> 100% natural stone</li>
                    <li><Fragment set:html={Check} /> Highly heat resistant</li>
                    <li><Fragment set:html={Check} /> Each slab is unique</li>
                    <li><Fragment set:html={Check} /> Great for <span class="highlight">granite countertops Kansas City</span> homes</li>
                </ul>
            </div>
            <div class="column glass-card">
                <h3>Quartz</h3>
                <ul>
                    <li><Fragment set:html={Check} /> Non-porous and stain resistant</li>
                    <li><Fragment set:html={Check} /> Extremely durable</li>
                    <li><Fragment set:html={Check} /> Wide range of colors</li>
                    <li><Fragment set:html={Check} /> Perfect for <span class="highlight">quartz countertops Olathe</span> kitchens</li>
                </ul>
            </div>
        </div>
    </div>
</section>
