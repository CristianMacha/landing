// ComparisonTable.astro
---
<section id="comparison" class="comparison-section">
    <div class="container">
        <h2>Granite vs. Quartz: Head-to-Head</h2>
        <div class="table-container glass-card">
            <table>
            <thead>
                <tr>
                    <th>Feature</th>
                    <th>Granite</th>
                    <th>Quartz</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Durability</td>
                    <td>Very durable, but can chip</td>
                    <td>Extremely durable and flexible</td>
                </tr>
                <tr>
                    <td>Maintenance</td>
                    <td>Requires periodic sealing</td>
                    <td>Non-porous, no sealing needed</td>
                </tr>
                <tr>
                    <td>Cost</td>
                    <td>Varies widely by slab</td>
                    <td>Consistent pricing</td>
                </tr>
                <tr>
                    <td>Heat Resistance</td>
                    <td>Excellent</td>
                    <td>Good, but can be damaged by extreme heat</td>
                </tr>
                <tr>
                    <td>Stain Resistance</td>
                    <td>Good, but porous and can stain</td>
                    <td>Excellent, non-porous</td>
                </tr>
                <tr>
                    <td>Design Variation</td>
                    <td>Each slab is unique</td>
                    <td>Uniform patterns and colors</td>
                </tr>
            </tbody>
        </table>
    </div>
</section>
